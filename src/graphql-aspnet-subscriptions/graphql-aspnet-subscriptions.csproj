<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>8</LangVersion>
    <NoWarn>$(NoWarn);1701;1702;1705;1591;NU1603;IDE0019;IDE0017;RCS1146;RCS1194;</NoWarn>
    <RootNamespace>GraphQL.AspNet</RootNamespace>
    <AssemblyName>GraphQL.AspNet.WebSockets</AssemblyName>
    <Title>GraphQL ASP.NET WebSockets</Title>
    <Product>GraphQL ASP.NET</Product>
    <Authors>Kevin Carroll</Authors>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <PackageIcon>icon.png</PackageIcon>
    <PackageDescription>A websocket integration package for GraphQL ASP.NET. Provides the required functionality
    to setup a websocket connection and perform graphql over web sockets.</PackageDescription>
    <PackageProjectUrl>https://graphql-aspnet.github.io/</PackageProjectUrl>
    <PackageTags>GraphQL ASPNET graphql ASP.NET mvc dotnet core</PackageTags>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/graphql-aspnet/graphql-aspnet</RepositoryUrl>
  </PropertyGroup>

<ItemGroup>
  <None Include="..\icon.png">
    <Pack>True</Pack>
    <PackagePath></PackagePath>
  </None>
</ItemGroup>

  <PropertyGroup>
    <CodeAnalysisRuleSet>..\styles.ruleset</CodeAnalysisRuleSet>
  </PropertyGroup>

  <ItemGroup>
    <AdditionalFiles Include="..\stylecop.json" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Abstractions" Version="2.2.0" />
    <PackageReference Include="StyleCop.Analyzers" Version="1.1.118">
      <PrivateAssets>All</PrivateAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.AspNetCore.WebSockets" Version="2.2.1" />
    <PackageReference Include="Microsoft.AspNetCore.Http.Abstractions" Version="2.2.0" />
    <PackageReference Include="Microsoft.Bcl.AsyncInterfaces" Version="1.0.0" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="2.2.0" />
    <PackageReference Include="Microsoft.Extensions.Logging" Version="2.2.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration" Version="2.2.0" />
    <PackageReference Include="System.Collections.Immutable" Version="1.6.0" />
    <PackageReference Include="System.Threading.Tasks.Dataflow" Version="4.11.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\graphql-aspnet\graphql-aspnet.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Middleware\ClientNotification\Components\" />
    <Folder Include="Middleware\SubscriptionEventExecution\Components\" />
  </ItemGroup>
</Project>